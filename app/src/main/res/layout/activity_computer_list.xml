<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".computer_list.ComputerListActivity">

    <androidx.cardview.widget.CardView android:id="@+id/search_bar"
                                       android:layout_width="match_parent"
                                       android:layout_height="50dp"
                                       android:clipToPadding="false"
                                       app:cardBackgroundColor="@android:color/white"
                                       app:cardCornerRadius="4dp"
                                       app:cardElevation="2dp"
                                       android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                                       android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

            <androidx.appcompat.widget.SearchView
                    android:id="@+id/et_computerlist_searchbar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    app:queryHint="Cari Komputer"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    android:imeOptions="actionSearch"
                    android:maxLines="1"
                    android:singleLine="true">

            </androidx.appcompat.widget.SearchView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView android:layout_width="0dp"
                                           android:layout_height="0dp"
                                           app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:layout_marginTop="8dp"
                                           app:layout_constraintTop_toBottomOf="@+id/chip_container"
                                           android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                                           app:layout_constraintBottom_toTopOf="@+id/bt_computerlist_tambah">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_computerlist"
                    android:layoutAnimation="@anim/layout_animation_fall_down"
            />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/chip_container"
                  android:orientation="vertical"
                  app:layout_constraintTop_toBottomOf="@+id/search_bar"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:singleLine="true"
                    android:scrollbars="none">

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_banjarmasin"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="24dp"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Bjm" android:checkable="true"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_sampit"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Spt" android:textColorLink="@android:color/white"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_bagendang"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Bgd"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_kotabaru"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Ktb"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_batulicin"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Btl"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_mekarputih"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Mkp"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_kumai"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Km"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_bumiharjo"
                        android:checkable="true"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/bg_chip_state_list"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Bhj" android:layout_marginEnd="24dp"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView2"
                android:scrollbars="none" android:visibility="gone">

            <com.google.android.material.chip.ChipGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:singleLine="true"
                    android:scrollbars="none">

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_regional"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="54dp"
                        app:chipBackgroundColor="@color/grey_line_very"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Regional"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_tpkb"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/grey_line_very"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="TPKB"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_trisakti"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/grey_line_very"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="Trisakti"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_pulpis"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/grey_line_very"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="PulangPisau"/>

                <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/chip_none"
                        android:checkable="false"
                        android:clickable="true"
                        android:focusable="true"
                        app:chipBackgroundColor="@color/grey_line_very"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="None" android:layout_marginEnd="24dp"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_computerlist_tambah"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:theme="@style/Button.Blue.Borderless"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" android:text="Tambah Komputer"
            android:fontFamily="@font/roboto"/>

    <TextView
            android:text="UNIT : --"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_computerlist_unit"
            app:layout_constraintTop_toTopOf="@+id/bt_computerlist_tambah"
            app:layout_constraintBottom_toBottomOf="@+id/bt_computerlist_tambah"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:fontFamily="@font/roboto"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/pb_computerlist" android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>