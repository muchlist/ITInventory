<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center">
    <androidx.cardview.widget.CardView android:layout_width="300dp"
                                       android:layout_height="300dp"
                                       android:layout_centerInParent="true"
                                       app:cardCornerRadius="@dimen/spacing_xlarge"
                                       android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/pilih_akun"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                      android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
                      android:textSize="24sp" android:fontFamily="@font/quicksand_bold" android:textStyle="bold"
                      android:id="@+id/textView8"/>

            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="60dp"
                                                          android:layout_height="60dp"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          android:layout_marginStart="32dp"
                                                          android:scaleType="centerCrop"
                                                          app:civ_border_color="@color/grey_40"
                                                          app:civ_border_width="2dp"
                                                          android:layout_marginTop="24dp"
                                                          app:layout_constraintTop_toBottomOf="@+id/textView8"
                                                          android:id="@+id/iv_akun_satu" android:clickable="true"
                                                          android:focusable="true"
                                                          android:src="@drawable/mac_and_cross"/>

            <TextView
                    android:text="@string/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_akun_satu"
                    app:layout_constraintTop_toTopOf="@+id/iv_akun_satu"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_akun_satu"
                    app:layout_constraintStart_toEndOf="@+id/iv_akun_satu" android:layout_marginStart="8dp"
                    android:textSize="18sp" android:fontFamily="@font/roboto"/>


            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="60dp"
                                                          android:layout_height="60dp"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          android:layout_marginStart="32dp"
                                                          android:scaleType="centerCrop"
                                                          app:civ_border_color="@color/grey_40"
                                                          app:civ_border_width="2dp"
                                                          android:layout_marginTop="16dp"
                                                          app:layout_constraintTop_toBottomOf="@+id/iv_akun_satu"
                                                          android:id="@+id/iv_akun_dua" android:clickable="true"
                                                          android:focusable="true" android:src="@drawable/lookatme"/>

            <TextView
                    android:text="@string/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_akun_dua"
                    app:layout_constraintTop_toTopOf="@+id/iv_akun_dua"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_akun_dua"
                    app:layout_constraintStart_toEndOf="@+id/iv_akun_dua" android:layout_marginStart="8dp"
                    android:textSize="18sp" android:fontFamily="@font/roboto"/>

            <TextView
                    android:text="@string/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/tv_logout"
                    android:background="@drawable/button_stroke"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
                    android:foregroundGravity="center" android:layout_marginBottom="24dp" android:clickable="true"
                    android:focusable="true"
                    android:longClickable="true"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_baseline_add_24px"
                    android:id="@+id/iv_add_akun" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toTopOf="parent" android:tint="@color/grey_40" android:clickable="true"
                    android:contentDescription="@string/dot" android:focusable="true"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>