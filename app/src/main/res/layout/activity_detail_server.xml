<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".inv_computer.computer_detail.DetailComputerActivity"
        android:background="@android:color/white">

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_baseline_cancel_24px"
                    android:id="@+id/iv_detail_back_server"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    android:contentDescription="@string/dot"/>

            <TextView
                    android:id="@+id/tv_detail_server_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="48dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/grey_80"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_detail_back_server"
                    tools:text="MUCHLIS SIMALAKA MALAKA" />

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_server_ip_address"
                    android:fontFamily="@font/quicksand"
                    tools:text="10.10.3.99"
                    android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView6"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView6"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:textStyle="bold"
                    android:background="@color/button_color_second" android:textColor="@android:color/white"
                    android:paddingStart="4dp" android:paddingEnd="4dp"/>

            <TextView
                    android:id="@+id/tv_detail_server_category"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/button_color_second"
                    android:fontFamily="@font/quicksand"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView7"
                    tools:text="2018-SPT-BTW" />
            <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/guideline3"
                    app:layout_constraintGuide_percent="0.4"/>

            <TextView
                    android:id="@+id/tv_detail_server_branch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="viewEnd"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView2"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView2"
                    tools:text="Sampit" />

            <TextView
                    android:id="@+id/tv_detail_server_merk"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/button_color_second"
                    android:fontFamily="@font/quicksand"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView3"
                    tools:text="Keuangan" />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_detail_server_year"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="textStart"
                    tools:text="Trisakti" android:textSize="18sp"
                    app:layout_constraintTop_toTopOf="@+id/textView4"
                    app:layout_constraintBottom_toBottomOf="@+id/textView4"
                    app:layout_constraintStart_toStartOf="@+id/guideline3" android:layout_marginStart="8dp"/>

            <TextView
                    android:id="@+id/tv_detail_server_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView9"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView9"
                    tools:text="Trisakti" />

            <TextView
                    android:id="@+id/tv_detail_server_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/quicksand"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_server_category"
                    app:layout_constraintStart_toStartOf="@+id/guideline3"
                    app:layout_constraintTop_toTopOf="@+id/textView31"
                    tools:text="Trisakti" />

            <TextView
                    android:id="@+id/tv_detail_server_note"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="48dp"
                    android:fontFamily="@font/quicksand"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/textView9"
                    tools:text="NOTE NOTE NOTE" />

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/cabang_"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/merk_model_dot"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/tahun_dot"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_server_merk" />

            <TextView
                    android:id="@+id/textView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/status_dot"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_server_location" />

            <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/lokasi"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/ip"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_server_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_server_name" />

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="@string/kategori_dot"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/guideline3"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/textView6"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="@string/history__"
                    android:textColor="@color/grey_80"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_server_name"
                    app:layout_constraintTop_toBottomOf="@+id/bt_detail_server_add_history" />

            <Button
                    android:id="@+id/bt_detail_edit_server"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|end"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@color/button_color_second"
                    android:fontFamily="@font/roboto"
                    android:text="@string/ubah_server"
                    app:layout_constraintEnd_toEndOf="@+id/tv_detail_server_note"
                    app:layout_constraintStart_toStartOf="@+id/tv_detail_server_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_server_note" />

            <Button
                    android:id="@+id/bt_detail_server_add_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="@string/tambah_history"
                    app:layout_constraintEnd_toEndOf="@+id/bt_detail_edit_server"
                    app:layout_constraintStart_toStartOf="@+id/bt_detail_edit_server"
                    app:layout_constraintTop_toBottomOf="@+id/bt_detail_edit_server" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_detail_server_history"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:clipToPadding="false">


        </androidx.recyclerview.widget.RecyclerView>

        <ProgressBar
                android:id="@+id/pb_detail_server_history"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginTop="24dp"
                android:foregroundGravity="center"
                android:visibility="gone" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>