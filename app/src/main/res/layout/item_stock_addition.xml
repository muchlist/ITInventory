<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="1dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:cardBackgroundColor="@color/grey_line_very"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        app:strokeColor="@color/grey_60"
        app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:id="@+id/tv_stock_add_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand_bold"
                android:singleLine="true"
                android:text="@string/ba"
                android:textColor="@color/grey_80"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/tv_stock_add_nomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand_bold"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/grey_80"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@+id/tv_stock_add_name"
                app:layout_constraintTop_toTopOf="@+id/tv_stock_add_name"
                tools:text="00000000" />

        <TextView
                android:id="@+id/tv_stock_add_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand"
                android:maxLines="2"
                android:singleLine="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tv_stock_add_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_stock_add_value"
                app:layout_constraintVertical_bias="1.0"
                tools:text="@string/note" />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.6" />

        <TextView
                android:id="@+id/tv_stock_add_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/button_color_green"
                android:fontFamily="@font/quicksand"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_stock_add_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_stock_add_name"
                tools:text="16" />

        <TextView
                android:id="@+id/tv_stock_add_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@color/button_color_green"
                android:fontFamily="@font/quicksand"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_stock_add_value"
                app:layout_constraintTop_toTopOf="@+id/tv_stock_add_value"
                tools:text="Unit" />

        <TextView
                android:id="@+id/tv_stock_add_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                app:layout_constraintBottom_toBottomOf="@+id/tv_stock_add_nomer"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                tools:text="Muchlis" />

        <TextView
                android:id="@+id/tv_stock_add-date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/tv_stock_add_user"
                tools:text="21-12-1991" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>