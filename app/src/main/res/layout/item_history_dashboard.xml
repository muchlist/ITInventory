<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="170dp"
                                                   android:layout_height="wrap_content" android:layout_gravity="center"
                                                   android:layout_marginEnd="@dimen/spacing_large"
                                                   android:layout_margin="@dimen/spacing_medium" app:cardElevation="0dp"
                                                   app:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Membersihkan kipas prosesor karena sering restart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_note"
                app:layout_constraintStart_toStartOf="parent"
                android:minLines="3"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_history_status" android:textSize="12sp"
                android:fontFamily="@font/roboto"/>
        <TextView
                android:text="Diperbaiki"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_status" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textStyle="bold|italic" app:layout_constraintTop_toBottomOf="@+id/tv_history_pc"
                android:fontFamily="@font/roboto"/>
        <TextView
                android:text="19 - 06 -2019"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_date"
                android:textSize="12sp" android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/tv_history_name"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/roboto" android:paddingEnd="2dp"/>
        <TextView
                android:text="Muchlis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_name"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="2dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_history_note" android:textStyle="italic"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textSize="12sp"
                android:fontFamily="@font/roboto"/>
        <TextView
                android:text="Nama Komputer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_history_pc"
                android:minLines="1"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:textStyle="bold" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                android:textSize="14sp" android:fontFamily="@font/roboto"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>